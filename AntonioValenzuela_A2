//






#include <iostream>
using namespace std;

int main() {
    float num1, num2;

    // Solicita al usuario los dos números
    cout << "Ingrese el primer número: ";
    cin >> num1;

    cout << "Ingrese el segundo número: ";
    cin >> num2;

    // Realiza las operaciones y muestra los resultados
    cout << "\n--- Resultados de las operaciones ---\n";
    cout << "La suma es: " << (num1 + num2) << endl;
    cout << "La resta es: " << (num1 - num2) << endl;
    cout << "La multiplicación es: " << (num1 * num2) << endl;

    // Validación para evitar división entre cero
    if (num2 != 0) {
        cout << "La división es: " << (num1 / num2) << endl;
    } else {
        cout << "No se puede dividir entre cero." << endl;
    }

    return 0;
}